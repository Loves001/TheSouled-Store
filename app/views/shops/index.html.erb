<h1>Shops#index</h1>
<p>Find me in app/views/shops/index.html.erb</p>
<p style="color: green"><%= notice %></p>

<h1>Products</h1>
<table>
<head>
<tr>
<th>Title</th>
<th>Price</th>
<th colspan="3"></th>
</tr>
</head>
<body>

  <% @products.each do |product| %>
  <tr>
    <td><%= product.title %></td>
    <td><%= product.price %></td>
    <td><%= link_to 'Show', shop_path(product) %></td>

    <td> 
    <%= form_for @order_item, remote: true do |f|%>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token -%>
    <%= f.hidden_field :product_id, :value => :product_id%>
    <%= f.number_field :quantity, :value => 1, :min => 1%>
    <%= f.submit "Add to Cart"%>
    <% end %>
    </td>
   </tr>
   <% end %>
   </body>
   </table>
   <br>
   
     <div id="cart">
     <%= render 'carts/cart'%>
     </div>
