<h1>Products</h1>
<table>
<head>
<tr>
<th>Title</th>
<th>Price</th>
<th colspan="3"></th>
</tr>
</head>
<body>

  <% @products.each do |product| %>
  <tr>
    <td><%= product.title %></td>
    <td><%= product.price %></td>
    <td><%= link_to 'Show', product %></td>
    <td><%= link_to 'Edit', edit_product_path(product) %></td>
    <td><%= button_to 'Destroy', product, method: :delete, data:{confirm: "Are you sure?"} %></td>
   </tr>
   <% end %>
   </body>
   </table>
